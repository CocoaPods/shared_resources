@import "vars";

#search {
  -webkit-tap-highlight-color: rgba(0,0,0,0);

  &.active {
    margin-top:-48px;
    left:0;
    height:100px;
    background-color:white;
    z-index:200;
    
    p {
      height:0;;
    }
    
    form {
      margin:0 auto;
    }
    
    input[type=search] {
      border: none;
      padding-top:32px;
      padding-bottom:12px;
      height:100px;
    }
  }
  
  &.static {
    position:static;
  }
  
  form {
    -webkit-transition: margin-top 0.3s ease-in-out;
    -moz-transition:    margin-top 0.3s ease-in-out;
    -o-transition:      margin-top 0.3s ease-in-out;
    transition:         margin-top 0.3s ease-in-out;
    
    display: block;
    position: relative;
    margin: 100px auto 20px;
    -webkit-user-select: none;

    p {
      -webkit-transition: height 0.3s ease-in-out;
      -moz-transition:    height 0.3s ease-in-out;
      -o-transition:      height 0.3s ease-in-out;
      transition:         height 0.3s ease-in-out;
    }

    input[type=search] {
      color: $cocoapods-highlight-color;
      text-transform: uppercase;
      display: block;
      margin: 0;
      padding: 0 8px 0 0px;
      width: 100%;
      height: 1.2em;
      border: 0px solid #98989f;
      border-bottom: 1px solid grey;
      -webkit-appearance: none;
      background: transparent;
      font-size: 4em;
      line-height: 1em;
      box-sizing: border-box;
      -webkit-tap-highlight-color: rgba(0,0,0,0);
      -webkit-box-sizing: border-box;
      -moz-box-sizing: border-box;

      &:focus  {
        outline: 0;
      }
      
      &::-webkit-input-placeholder {
        color: $cocoapods-highlight-color;
      }
      
      &:-moz-placeholder {
        color: $cocoapods-highlight-color;
      }  
      
      &::-webkit-search-cancel-button {
        z-index: 9;
        position: absolute;
        right: 12px;
        top: 46px;
        width: 32px;
        height: 32px;
        margin: 0;
        padding: 0;
        background: url(/stylesheets/images/cancel.svg);
        -webkit-appearance: none;
        cursor:pointer;
      }
      
      &::-webkit-search-cancel-button:active {
        background-position: 0 0;
      }
      
      &::-webkit-search-cancel-button {
      /*  outline: 1px dashed red !important;*/
      }
    }
    
    span.amount {
      color: gray;
      font-size: 2.5em;
      position: absolute;
      right: 1.5em;
      top: 38px;
    }
  }
  
  & > div {
    width: 90%;
    margin: 0 auto;
  }
}

#results_container {
  background-color: $search-background-color;
  
  .row {
    margin: 2em 0;
    padding: 0;
  }
  
  .no_results {
    .apology {
      text-transform: uppercase;
      font-size: 2em;
      text-align: center;
      color: $cocoapods-highlight-color;
    }
  }
  
  .results {
    .header {
      opacity: 0.5;
      overflow: hidden;
  
      .explanation { float: left; }
      .tothetop { float: right; }
    }
  }

  ol.results {
    list-style: none;
    padding: 0;

    // TODO Florian: Improve the structure.
    //
    li, ol.more {
      font-size: 90%;
      background-color: white;
      margin: 0;
      padding: 10px;
      border: 1px solid #cccccc;
  
      .text {
        width: 90%;
        float: left;
      }
      .count {
        text-align: right;
      }
    }

    li.result {
      margin-bottom: -1px;
      overflow: hidden;
      width:100%;
      display: table;
      position: static;
      
      .infos {
    
        span.os {
          padding: 0.2em;
          font-size: 0.5em;
          color: white;
          background-color: black;
          margin-left: 1em;
          vertical-align: 35%;
        }
    
        // For clippy.
        //
        span.version {
          display: none;
        }
    
        h3 {
          margin: 0 0 0.2em;
          font-weight:normal;
        }
    
        .subspecs, .author {
          display:none;
        }
    
        p {
          margin: 0;
          font-size:14px;
        } 
      }
      
      .actions {
        padding-top:12px;
        text-align:right;
        vertical-align: middle;
        height:100%;

        a {
          font-size: 1.3em;
          color: white;
          padding: 0.5em 1em;
          background-color: #dacfcd;
          margin: 0 0 0 0.5em;
      
          &:hover {
            background-color: $cocoapods-highlight-color;
          }
        }
    
      }
    }
  }

  .addination {
    text-align: center;
    text-transform: uppercase;
    width: 200px;
    padding: 10px;
    border: 1px solid black;
    margin: 20px auto;
    background-color: white;
  }
  
  .selection {
    overflow: hidden;
  }

  .platform {
    display: none;
    
    float: left;
    margin-bottom: 1em;

    input[type="radio"] {
      display: none;
    }
  
    input[type="radio"]:checked + label, label:hover {
      color: white;
      background-color: red;
    }
  
    label {
      font-weight: normal;
      padding: 6px 10px;
      border: 1px solid red;
      margin-right: -1px;
      background-color:white;
    }
  
    label:last-child {
      margin-right: 0px;
    }
  }
  
  .allocations {
    text-transform: uppercase;
    float: right;
    
    ol {
      padding: 0;
      
      & > li {
        float: left;
        cursor: pointer;
      }
      
      li:first-child {
        margin-left: 0px;
      }
      
      &.shown li, &.more {
        list-style: none;
        padding: 6px 10px;
        border: 1px solid red;
        margin-left: -1px;
        background-color:white;
        overflow: hidden;
      
        &:hover {
          color: white;
          background-color: red;
        }
      
        .text {
          float: left;
          margin-right: 1em;
        }
        .count {
          float: right;
        }
      }
      
      &.more {
        float: left;
        text-align: center;
        text-transform: uppercase;
      }
    }

  }

}

body.ios #search form { margin-top: 0; }
body.ios #search div.results ol.results li.result .infos { width: 100%; }
body.ios #search div.results ol.results li.result .actions { margin-top: 1.5em; }