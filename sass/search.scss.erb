@import "vars";

#search
{
  -webkit-tap-highlight-color: rgba(0,0,0,0);

  form
  {
    display: block;
    position: relative;
    margin: 100px auto 20px;
    -webkit-user-select: none;

    input[type=search]
    {
      color: #fb0006;
      text-transform: uppercase;
      display: block;
      margin: 0;
      padding: 0 8px 0 0px;
      width: 100%;
      height: 52px;
      border: 0px solid #98989f;
      border-bottom: 1px solid grey;
      -webkit-appearance: none;
      background: transparent;
      font-size: 3em;
      line-height: 1em;
      box-sizing: border-box;
      -webkit-tap-highlight-color: rgba(0,0,0,0);
      -webkit-box-sizing: border-box;
      -moz-box-sizing: border-box;

      &:focus 
      {
        outline: 0;
      }
      &::-webkit-input-placeholder
      {
        color: #fb0006;
      }
      &:-moz-placeholder
      {
        color: #fb0006;
      }  
      &::-webkit-search-cancel-button
      {
        z-index: 9;
        position: absolute;
        right: 12px;
        top: 12px;
        width: 32px;
        height: 32px;
        margin: 0;
        padding: 0;
        background: url(/stylesheets/images/cancel.svg);
        -webkit-appearance: none;
        cursor:pointer;
      }
      &::-webkit-search-cancel-button:active
      {
        background-position: 0 0;
      }
      &::-webkit-search-cancel-button
      {
      /*  outline: 1px dashed red !important;*/
      }
    }
    
    span.amount {
      color: gray;
      font-size: 2.5em;
      position: absolute;
      right: 1.5em;
      top: 4px;
    }
  }
  
  & > div
  {
    width: 90%;
    margin: 0 auto;
  }

  ol.results 
  {
    list-style: none;
    padding: 0;
    
    li.result
    {
      font-size: 90%;
      background-color: white;
      margin: 0;
      padding: 0 10px 10px;
      border: 2px solid lightgray;
      
      .infos
      {
        width: 60%;
        
        span.os {
          padding: 0.2em;
          font-size: 0.5em;
          color: white;
          background-color: black;
        }
      }
    }
  }
  
  .addination 
  {
    text-align: center;
    text-transform: uppercase;
    width: 200px;
    padding: 10px;
    border: 1px solid black;
    margin: 20px auto;
    background-color: white;
  }

  .platform {
    input[type="radio"] {
      display: none;
    }
    input[type="radio"]:checked + label, label:hover {
      color: white;
      background-color: red;
    }
    label {
      padding: 10px;
      border: 1px solid red;
      margin-left: -1px;
    }
    label:first-child {
      margin-left: 0px;
    }
  }
}