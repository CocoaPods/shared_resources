@import "vars";

#search {
  -webkit-tap-highlight-color: rgba(0,0,0,0);

  &.active {
    margin-top:-48px;
    left:0;
    background-color:white;
    z-index:200;
    clear:left; 
    
    p {
      display:none;
    }
    
    form {
      height:100px;
      
      fieldset {
        bottom: 0em;
      }
    }
    
    input[type=search] {
      border: none;
      padding-top:32px;
      padding-bottom:12px;
      height:100px;
    }
  }
  
  &.static {
    position:static;
  }
    
  form {
    -webkit-transition: height 0.3s ease-in-out;
    -moz-transition:    height 0.3s ease-in-out;
    -o-transition:      height 0.3s ease-in-out;
    transition:         height 0.3s ease-in-out;
    
    height:320px;
    
    display: block;
    position: relative;
    -webkit-user-select: none;
    cursor:text;

    fieldset {
      position: absolute;
      bottom: 16px;
      width:100%;
    }

    p {
      -webkit-transition: display;
      -moz-transition:    display;
      -o-transition:      display;
      transition:         display;
      margin-bottom: 0px;
    }

    input[type=search] {
      -webkit-transition: padding 0.3s ease-in-out;
      -moz-transition:    padding 0.3s ease-in-out;
      -o-transition:      padding 0.3s ease-in-out;
      transition:         padding 0.3s ease-in-out;      

      -webkit-transition: margin 0.3s ease-in-out;
      -moz-transition:    margin 0.3s ease-in-out;
      -o-transition:      margin 0.3s ease-in-out;
      transition:         margin 0.3s ease-in-out;      
      
      color: $cocoapods-highlight-color;
      text-transform: uppercase;
      display: block;
      margin: 0;
      
      width: 100%;
      height: 1.2em;
      
      border: 0px solid #98989f;
      border-bottom: 1px solid grey;
      background: transparent;
      font-size: 4em;

      -webkit-appearance: none;
      -webkit-tap-highlight-color: rgba(0,0,0,0);


      &:focus  {
        outline: 0;
      }
      
      &::-webkit-input-placeholder {
        color: $cocoapods-highlight-color;
      }
      
      &:-moz-placeholder {
        color: $cocoapods-highlight-color;
      }  
      
      &::-webkit-search-cancel-button {
        z-index: 9;
        position: absolute;
        right: 12px;
        top: 46px;
        width: 32px;
        height: 32px;
        margin: 0;
        padding: 0;
        background: url(/stylesheets/images/cancel.svg);
        -webkit-appearance: none;
        cursor: pointer;
      }
      
      &::-webkit-search-cancel-button:active {
        background-position: 0 0;
      }
      
      &::-webkit-search-cancel-button {
      /*  outline: 1px dashed red !important;*/
      }
    }
    
    span.amount {
      color: gray;
      font-size: 2.5em;
      position: absolute;
      right: 1.5em;
      top: 38px;
    }
  }
  
  & > div {
    width: 90%;
    margin: 0 auto;
  }
}


#results_container.active {
  padding: 2em 0;
  background-color: $search-background-color;
  -webkit-transition: all 0.3s ease-in-out;
  -moz-transition:    all 0.3s ease-in-out;
  -o-transition:      all 0.3s ease-in-out;
  transition:         all 0.3s ease-in-out;
}

#results_container {
  
  .row {
    padding: 0;
  }
  
  .no_results {
    .apology {
      text-transform: uppercase;
      font-size: 2em;
      text-align: center;
      color: $cocoapods-highlight-color;
    }
  }
  
  .results {
    .header {
      opacity: 0.5;
      overflow: hidden;
  
      .explanation { float: left; }
      .tothetop { float: right; }
    }
  }

  ol.results {
    list-style: none;
    padding: 0;

    // TODO Florian: Improve the structure.
    //
    li, ol.more {
      font-size: 0.8em;
      background-color: white;
      margin: 0;

      border: 1px solid #cccccc;
  
      .text {
        width: 0.9em;
        float: left;
      }
      .count {
        text-align: right;
      }
    }

    li.result {
      margin-bottom: -1px;
      overflow: hidden;
      
      &.selected {
        background-color: whitesmoke;
      }
      
      .infos {
        padding: 12px;
        
        span.os {
          padding: 0.2em;
          font-size: 0.5em;
          color: white;
          background-color: black;
          margin-left: 1em;
          vertical-align: 35%;
        }
    
        img.copy {
          vertical-align: top;
          margin-top: 0.1em;
        
          &:hover { opacity: 0.5; }
        }
        span.copy-result {
          display: none;
          font-size: 0.5em;
        
          &.manual {
            font-family: courier;
          }
        }
    
        h3 {
          margin: 0 0 0.2em;
          font-weight:normal;
          word-wrap:break-word;
          
        }
    
        .subspecs, .author {
          display:none;
        }
    
        p {
          margin: 0;
          font-size:14px;
        } 
      }
      
      
      .actions {
        text-align:right;

        a {
          font-size: 1.3em;
          color: white;
          padding: 0.5em 1em;
          background-color: #dacfcd;
      
          &:hover {
            background-color: $cocoapods-highlight-color;
            text-decoration:none;
          }
        }
    
      }
    }
  }

  .explanation {
    color:white;
    text-transform:uppercase;
    font-size:2em;
  }

  .addination {
    cursor: pointer;
    text-align: center;
    text-transform: uppercase;
    width: 200px;
    padding: 10px;
    border: 1px solid black;
    margin: 20px auto 0;
    background-color: white;
    
    &:hover {
      color: white;
      background-color: red;
    }
  }
  
  .selection {
    overflow: hidden;
    
    li *, label *, li, label {
      cursor: pointer;
    }
  }

  .platform {
    display: none;
    float: left;
    margin-bottom: 1em;

    input[type="radio"] {
      display: none;
    }
  
    input[type="radio"]:checked + label, label:hover {
      color: white;
      background-color: red;
    }
  
    label {
      font-weight: normal;
      padding: 6px 10px;
      border: 1px solid red;
      margin-right: -1px;
      background-color:white;
    }
  
    label:last-child {
      margin-right: 0px;
    }
  }
  
  .allocations {
    text-transform: uppercase;
    float: right;
    
    ol {
      float: left;
      padding: 0;
      
      & > li {
        margin-bottom: 5px;
        float: left;
      }
      
      li:first-child {
        margin-left: 0px;
      }
      
      &.shown li, &.more li, &.onrequest li {
        list-style: none;
        padding: 6px 10px;
        border: 1px solid red;
        margin-left: -1px;
        background-color:white;
        overflow: hidden;
      
        &:hover {
          color: white;
          background-color: red;
        }
      
        .text {
          float: left;
          margin-right: 1em;
        }
        .count {
          float: right;
        }
      }
      
      &.more {
        float: left;
        text-align: center;
        text-transform: uppercase;
      }
    }

  }
}

// Deal with vertical centering as this is complex it's kept together - ./
// Works as a combination of http://vanseodesign.com/blog/demo/vertical-centering/positioning-stretch.php
// and an absolute right aligned block

#results_container ol.results li.result {
  position:relative;
  
  .action-wrapper {
    position: absolute;
    top: 0;
    bottom: 0;
    left:0;
    right:12px;
    margin: auto;
    height: 30%;
  }

  .actions {
    padding-right:12px;
    vertical-align: middle;
    height:100%;
  
    display: block;
    position: absolute;
    right: 0;
    
    a {
      display:inline-block;
      margin: -0.4em 0 0 0.2em; 
    }
  }
}


@media (max-width:1000px){
  #results_container {
    ol.results li.result .actions a {
      padding: 0.5em 0.5em;
    }
  }
}

@media (max-width:768px){
   #search_results {
     padding:0;
     
     .allocations {
       margin: 10px auto;
     }
   }
  // Make the OS selector centered and smaller
  #results_container {
    
    ol.results li.result .actions a {
      padding: 0.5em 0.5em;
    }
    
    .result {
      padding: 12px;
    }
    
    .selection {
      font-size:10px;
      text-align:center;
    
      .platform {
        float:none;
      }
    }
  }
  
  #search form {
    height:240px;
    margin: 12px;
    
    input[type=search] {
      font-size:32px;
    }
    
    p {
      font-size:0.9em;
    } 
  }
  
  #results_container {
    form { 
      margin-top: 0; 
    }

    div.results ol.results li.result {
      h3 {
        font-size: 0.9em;
      }
      
     .infos { 
       width: 100%;
       padding:0; 
     } 
     
     .actions { 
       margin: 0.5em 0;
       text-align:center;

       a {
         font-size: 0.8em;
       }
      }
    }
  }
}
