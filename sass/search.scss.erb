@import "vars";

form.search-form
{
  display: block;
  position: relative;
  margin: 100px auto 20px;
  width: 90%;
  height: 46px;
  -webkit-user-select: none;

  input[type=search]
  {
    color: #fb0006;
    text-transform: uppercase;
    display: block;
    margin:0;
    padding: 0 8px 0 13px;
    width: 100%;
    height: 46px;
    border: 0px solid #98989f;
    border-bottom: 2px solid grey;
    -webkit-appearance: none;
    background: #fff;
    font-size: 30px;
    line-height: 1;
    box-sizing: border-box;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;

    &:focus 
    {
      outline: 0;
    }
    &::-webkit-input-placeholder
    {
      color: #fb0006;
    }
    &:-moz-placeholder
    {
      color: #fb0006;
    }  
  }
}

body.desktop form.search-form  input[type=search]::-webkit-search-cancel-button
{
  z-index: 9;
  position: absolute;
  right: 6px;
  top: 6px;
  width: 32px;
  height: 32px;
  margin: 0;
  padding: 0;
  background: url(images/cancel.svg);
  -webkit-appearance: none;
}

body.desktop form.search-form  input[type=search]::-webkit-search-cancel-button:active
{
  background-position: 0 -32px;
}
body.ios form.search-form  input[type=search]::-webkit-search-cancel-button
{
