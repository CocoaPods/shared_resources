@import "vars";

.headline.index {
  text-align: center;
  
  h1 {
    font-size: 72px;
    padding-top: 110px;
    padding-bottom: 18px;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -mr-user-select: none;
    user-select: none;
    
    cursor: default;
  }
}

@media screen and (max-width: 400px){
  .headline {
    height:180px;

    &.blog-post h1 {
      font-size:32px;
    }
  }
}

@media (max-width:768px) {
  .headline.index h1 {
    font-size:48px;
  }
}

header.blog-post {
  h1 {
    position: absolute;
    bottom: 18px;
    left: 15px;
    
    font-weight:normal;
    font-size:48px;
    width:75%;
    word-wrap:break-word;
    
  }
}

article.author.metadata header {
  text-align:center;
  margin-top:-56px;
  
  img {
    margin-bottom:20px;
  }
  
  p {
    margin-bottom:4px;
    margin-top:0px;
  }
}

@media (max-width: 1024px) {
  article.author.metadata header {
    margin-top:32px;
  }
}

.sidebar {
  text-align:center;  
  padding-top: 64px;
  
  
  h3 {
    color: $blog-hover-color;
    font-size:32px;
  }

  ol {
    padding:20px;
    list-style: none;
    font-size:18px;
    
    li {
      text-align:left;
    }
  }
}

@media (max-width: 1024px) {
  .sidebar {
    padding-top:16px;
    
  }
}

#post-accessories {
  background-color:$content-background-color;
  text-align:right;
  
  .row {
    padding: 0;
  }
}

#post-info {
  padding-top:48px;
  
  .previous {
    text-align:right;
  }
  
  h3 {
    margin: 8px 0 4px;
  }

  p {
    margin: 8px 0 30px;
  }
  
  a {
    &:hover h4, &:focus h4 {
      color: $footer-background-color;
      text-decoration: none;
    }
  }
  
  header {
    h4 {
      text-transform: uppercase;
      font-size:14px;
      color: $footer-background-color;
      text-decoration: none;
      font-weight:normal;
    }    
  }
}

footer.page-footer {
  background-color: $footer-background-color;
  color:white;
}

