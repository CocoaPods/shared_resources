//= require fonts.css

@import "vars";

///  Baseline colours & fonts

body {
  font-family: $fonts;
}

h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
  font-family: $fonts;
}

h1, h2, h3 {
  font-weight:bold;
}

h5 {
  font-size:22px;
}

aside {
  margin-top:-20px;
}

/// TODO: On small screens code should either wrap of be scrollable
.code-break {
  background-color:white;
  margin-left:20px;
  margin-right:20px;
}

pre.highlight {
  border-left: 2px solid $blog-highlight-color;
  border-top: none;
  border-right: none;
  border-bottom: none;
  padding-left: 20px;
  margin-bottom: 0;
  border-radius: 0px; 
}

p {
  font-size: 18px;
  line-height: 1.4em;
  margin: 24px 0 32px;
}

a {
  color: $blog-highlight-color;
  
  &:hover, &:focus {
    color: $blog-hover-color;
  }
}

///// Navigation

.navbar {
  background-color: $base-color;
  border: none;
  margin: 0;
  padding: 0;
}

.navbar-nav {
  > li > a {
    font-size: 16px;
    color: $background-color;
    text-transform: uppercase;
    padding-top: 14px;
    padding-bottom:6px;
    padding-left:8px;
    padding-right:8px;
    height: 50px;
    letter-spacing: 1.2pt;
    
    &:hover,
    &:focus {
      color: $nav-color;      
      background-color: $base-color;
      padding-bottom: 5px;
      border-bottom: 4px $blog-highlight-color solid;
    }
    
    &:active {
      color: lighten($nav-color, 10%);
    }
  }

  > .active > a {
    border-top: 6px $base-color solid;
    padding-top: 8px;
    background-color: $blog-highlight-color;
    color: $nav-color;      
    font-weight: bold;
    cursor:default;
    
    &:hover,
    &:focus {
      background-color: $blog-highlight-color;
      color: $nav-color;      
      
    }
  }
}

.navbar-brand {
  background: url(<%= asset_data_uri "CocoaPods-Logo-Beta.png" %>) no-repeat left center;
  height: 48px;
  width: 220px;
  background-size: 220px 48px;
}

.navbar-toggle {
  border-color: $background-color;
  &:hover,
  &:focus {
    background-color: $background-color;

    .icon-bar {
      background-color: $base-color;
    }
  }
  .icon-bar {
    background-color: $background-color;
  }
}

/// Headline

.headline {
  color: $blog-highlight-color;
  display: block;
  font-size: 40px;
  height: 340px;
}

$divider-color: #bbb;


@mixin arrow-down($size, $color) {
	border-left: $size solid transparent;
	border-right: $size solid transparent;
	border-top: $size solid $color;

  height: 0;
  margin: 0 auto;
  width: 0;
}

.horizontal-divider {
  background-color: $divider-color;
  box-shadow: 1px 1px 1px #ddd;
  display: block;
  height: 1px;
  margin: 0 auto;
  width: 50%;
}
.sidebar .enclosed-arrow-down {
  @include arrow-down(13px, $content-background-color);
  margin-top:-15px;
}

.enclosed-arrow-down {
  @include arrow-down(13px, white);
  margin-top:-15px;
}
.arrow-down {
  @include arrow-down(15px, $divider-color);
}

#content-wrapper {
  background-color: $content-background-color;
  margin: 0;
  padding: 0;
  
  img {
    max-width:100%;
  }
}

.row {
  padding:20px 0;
}

.gravatar {
  border-radius: 50%;
  -moz-border-radius: 50%;
  -webkit-border-radius: 50%;
}

#content-wrapper .info-row {
  padding:0;
  
  ul {
    padding:0;
    margin:0;

    li {
      padding-top:6px;
      font-size:14px;
    }
  }
  
  a#pull-request {
    background: url(<%= asset_data_uri "pull-request-image.png" %>) no-repeat left center;
    height: 50px;
    width: 50px;
    background-size: 50px 50px;
    float:right;
  }
}


.popover {
  border: 1px solid $blog-highlight-color;
  border-radius: 6px;
  -webkit-box-shadow: none;
  box-shadow: none; 
}
.popover.top .arrow {
  border-top-color: $blog-highlight-color;
}

.site_navigation .footer-index{
  ul {
    padding-left:0px;
  }
  li {
    list-style-type: none;
    padding-left:8px;
    
    a {
      display:block;
    }
    &:hover {
      border-left:2px solid $blog-highlight-color;
      padding-left:6px;
      
    }
  }  
}

footer {
  &.page-footer {
    padding: 30px 0;
    background-color: $footer-background-color;
    color:white;
    
    .contributors {
      font-size:24px;
    }
  
    .sponsors {
      font-size:20px;
    }
  
    h4 {
      text-transform:uppercase;
      color:$highlight-on-dark-background-color;
      font-size:14px;
      margin-bottom: 0px; 
    }
  
    p {
      margin:0 0 20px;
      font-size:18px;
    }
  
    article.minor p {
      margin:0 0 14px;
      font-size:14px;    
    }
  
    a:hover, a:focus {
      color: $footer-link-hover-color;
    }
  }
  
  &.footer-links {
    background-color:$secondary-red;
    ul {
      margin-left:-16px;
      padding-left:0;
    }
    
    li {
      border-right: 2px solid rgba($blog-highlight-color, 0.5);
      list-style-type: none;
      font-size:12px;
      padding-bottom: 6px;
     
      &:hover {
        border-right: 2px solid $blog-highlight-color;
      }
      
      a {
        color: white;
      }
    }
    
    .cocoapods-small-logo {
      display:block;
      position:absolute;
      top: 2px;
      left: -70px;
      margin-bottom: 12px;
      
      background: url(<%= asset_data_uri "CocoaPods-Logo-Mini.png" %>) no-repeat left center;
      height: 36px;
      width: 36px;
      background-size: 36px 36px; 
    }
  }
}

@media (max-width:800px){
  footer.footer-links .cocoapods-small-logo {
    position:static;
  }
}

@media (max-width: 1000px){
  footer.footer-links .cocoapods-small-logo {
    left: -40px;
  }
}

@media (min-width: 1200px) {
  .hidden-lg-span {
    display:none;
  }
  
  .visible-lg-span {
    display:inline;
  }
}

@media (max-width: 1200px) {
  .hidden-lg-span {
    display:inline;
  }
  .visible-lg-span {
    display:none;
  }
}
