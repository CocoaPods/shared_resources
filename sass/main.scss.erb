//= require fonts.css

@import "vars";
@import "syntax";

///  Baseline colours & fonts

body {
  font-size: 18px;
  font-family: $fonts;
}

h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
  font-family: $fonts;
}

h1, h2, h3 {
  font-weight:bold;
}

h2 {
  margin-top:40px;
}

h5 {
  font-size:1.2em;
}

aside {
  margin-top:-20px;
}

.code-break {
  background-color:white;
  margin-left:20px;
  margin-right:20px;
}

pre.highlight {
  border-left: 2px solid  $cocoapods-highlight-color;
  border-top: none;
  border-right: none;
  border-bottom: none;
  padding-left: 20px;
  margin-bottom: 0;
  border-radius: 0px;
}

p, ol, ul, label {
  line-height: 1.4em;
  margin: 24px 0 32px;
}

a {
  color:  $cocoapods-highlight-color;

  &:hover, &:focus {
    color: $blog-hover-color;
  }
}

.has-flash {
  display:none;
}

html.flash {
  .has-flash {
    display:block;
  }
  
  .no-flash {
    display:none;
  }
}

///// Navigation

.navbar {
  background-color: $base-color;
  border: none;
  margin: 0;
  padding: 0;

  -webkit-transition: opacity 0.3s ease-in-out;
  -moz-transition:    opacity 0.3s ease-in-out;
  -o-transition:      opacity 0.3s ease-in-out;
  transition:         opacity 0.3s ease-in-out;
}

.navbar-nav {
  > li > a {
    font-size: 0.9em;
    color: $background-color;
    text-transform: uppercase;
    padding-top: 14px;
    padding-bottom:6px;
    padding-left:8px;
    padding-right:8px;
    height: 50px;
    letter-spacing: 1.2pt;

    &:hover,
    &:focus {
      color: $nav-color;
      background-color: $base-color;
      padding-bottom: 5px;
      border-bottom: 4px  $cocoapods-highlight-color solid;
    }

    &:active {
      color: lighten($nav-color, 10%);
    }
  }

  > .active > a {
    border-top: 6px $base-color solid;
    padding-top: 8px;
    background-color:  $cocoapods-highlight-color;
    color: $nav-color;
    font-weight: bold;
    cursor:default;

    &:hover,
    &:focus {
      background-color:  $cocoapods-highlight-color;
      color: $nav-color;

    }
  }
}

.navbar-brand {
  background: url(<%= asset_data_uri "CocoaPods-Logo-Beta.png" %>) no-repeat left center;
  height: 48px;
  width: 220px;
  background-size: 220px 48px;
}

.navbar-toggle {
  border-color: none;
  height:32px;

  .glyphicon-plus {
    font-size:3em;
    color:white;
    margin-top:-20px;
  }
  
  &:hover,
  &:focus {
    background-color: $background-color;

    .icon-bar {
      background-color: $base-color;
    }
  }
  .icon-bar {
    background-color: $background-color;
  }
}

/// Headline

.headline {
  color:  $cocoapods-highlight-color;
  display: block;
  height: 340px;
}

.headline.index {
  text-align: center;

  h1 {
    font-size: 4em;
    padding-top: 110px;
    padding-bottom: 18px;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -mr-user-select: none;
    user-select: none;
    font-weight:normal;

    cursor: default;
  }
}

@media screen and (max-width: 400px){
  .headline {
    height:180px;

    &.index h1{
      padding-top: 30px;
    }

    &.blog-post h1 {
      font-size:1.8em;
    }
  }
}

@media (max-width:768px) {
  .headline.index h1 {
    font-size:2.7em;
  }
}

$divider-color: #bbb;

@mixin arrow-down($size, $color) {
  border-left: $size solid transparent;
  border-right: $size solid transparent;
  border-top: $size solid $color;

  height: 0;
  margin: 0 auto;
  width: 0;
}

.horizontal-divider {
  background-color: $divider-color;
  box-shadow: 1px 1px 1px #ddd;
  display: block;
  height: 2px;
  margin: 0 auto;
  width: 50%;
}

.enclosed-arrow-down {
  @include arrow-down(13px, white);
  margin-top:-15px;
}

.arrow-down {
  @include arrow-down(15px, black);
}


#content-wrapper {
  background-color: $content-background-color;
  margin: 0;
  padding: 0;

  img {
    max-width:100%;
  }
}

.row {
  padding:20px 0;
}

.gravatar {
  border-radius: 50%;
  -moz-border-radius: 50%;
  -webkit-border-radius: 50%;
}

a#pull-request {
  background: url(<%= asset_data_uri "pull-request-image.png" %>) no-repeat left center;
  height: 50px;
  width: 50px;
  background-size: 50px 50px;
  float:right;
}

.popover {
  border: 1px solid  $cocoapods-highlight-color;
  border-radius: 6px;
  -webkit-box-shadow: none;
  box-shadow: none;
}

.popover.top .arrow {
  border-top-color:  $cocoapods-highlight-color;
}

.site_navigation .footer-index {
  ul {
    padding-left:0px;
  }
  li {
    list-style-type: none;
    padding-left:8px;

    a {
      display:block;
    }
    &:hover {
      border-left:2px solid  $cocoapods-highlight-color;
      padding-left:6px;

    }
  }
}

footer {
  &.page-footer {
    padding: 30px 0;
    background-color: $footer-background-color;
    color:white;

    .contributors {
      font-size:1.33em;
    }

    .sponsors {
      font-size:1.1em;
      margin-bottom:0px;
    }

    h4 {
      text-transform:uppercase;
      color:$highlight-on-dark-background-color;
      font-size:0.8em;
      margin-bottom: 0px;
    }

    p {
      margin:0 0 20px;
    }

    article.minor p {
      margin:0 0 14px;
      font-size:0.8em;
    }

    a:hover, a:focus {
      color: $footer-link-hover-color;
    }
  }

  &.footer-links {
    background-color:$secondary-red;
    ul {
      margin-left:-16px;
      padding-left:0;
    }

    li {
      border-right: 2px solid rgba( $cocoapods-highlight-color, 0.5);
      list-style-type: none;
      font-size:0.66em;
      padding-bottom: 6px;

      &:hover {
        border-right: 2px solid  $cocoapods-highlight-color;
      }

      a {
        color: white;
      }
    }

    .cocoapods-small-logo {
      display:block;
      position:absolute;
      top: 2px;
      left: -70px;
      margin-bottom: 12px;

      background: url(<%= asset_data_uri "CocoaPods-Logo-Mini.png" %>) no-repeat left center;
      height: 36px;
      width: 36px;
      background-size: 36px 36px;
    }
  }
}

// Modifications for iOS

@media (max-width:768px){

  footer.footer-links  .cocoapods-small-logo {
      position:static;
  }

}

@media (max-width: 1000px){
  footer.footer-links .cocoapods-small-logo {
    left: -40px;
  }
}

@media (min-width: 1200px) {
  .hidden-lg-span {
    display:none;
  }

  .visible-lg-span {
    display:inline;
  }
}

@media (max-width: 1200px) {
  .hidden-lg-span {
    display:inline;
  }
  .visible-lg-span {
    display:none;
  }
}
