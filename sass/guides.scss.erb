@import "vars";


.header {
  h1 {
    color:$blog-highlight-color;
  }
}

#content-wrapper {

  blockquote {
    padding: 0px 20px;
    margin: 0;
    border-left: 2px solid $blog-highlight-color;
    p {
      font-size: 16px;
    }
  }

  #footer ul {
    list-style: none;
    padding-left:0;
  }

  .half {
    width: 50%;
    float:left;
    h3 {
      margin: 22px 0;
    }
    p {
      margin:12px;
    }
  }

  h3 {
    margin: 44px 0 16px;
  }

  ul {
    margin: 12px 0 24px;    
  }
  
  li {
    font-size: 18px;
    line-height: 1.4em;
    margin: 8px 0 8px;
  }
}

.footer-index {
  h3 {

  }
  li {
    margin-left:8px;
  }
}