@import "vars";

.header {
  h1 {
    color: $cocoapods-highlight-color;
    font-weight: normal;
  }
}

.info-row {
  padding:0;
  background-color: $content-background-color;

  #pull-request {
    margin-top: -12px;
  }

  .row {
    padding:0;
  }
  ul {
    padding:0;
    margin:0;

    li {
      padding-top:6px;
      font-size:14px;
    }
  }
}

.breadcrumb {
  margin-bottom:0px;
}

#tab-controller {
  .bs-sidebar {
    a {
      word-wrap: break-word;
    }

    li.active > a {
      background-color: $cocoapods-highlight-color;;
      color: white;
    }

    ul li {
      margin:8px 0 0 0;
      font-size: 16px;
    }

    ul ul {
      margin: 0px 0 4px 0;
      font-size: 14px;

      li {
        padding-left: 12px;
        margin:0;
        text-overflow:ellipsis;

      }
    }
  }
}

#content-wrapper {

  .header-link {
    content: "<";
    color: $cocoapods-highlight-color;
    position: absolute;
    left:-0.3em;

    display: block;
    padding-right: 6px;
    padding-left: 30px;
    margin-left: -30px;
    cursor: pointer;

    &:hover {
      text-decoration:none;
    }
  }

  h1, h2, h3, h4 {
    .header-link {
      display:none;
    }
    &:hover {
      .header-link {
        display:inline-block;
      }
    }
  }

  #tab-content {
    h2 {
      margin-top: 20px;
      margin-bottom: 10px;
    }

    pre {
      background-color:white;
      border:none;
    }

    blockquote {
      margin: 6px 0;
    }

    hr {
      border-color:white;
      border-width:4px;
    }
  }


  blockquote {
    padding: 0px 20px;
    margin: -12px 0;
    border-left: 2px solid  $cocoapods-highlight-color;

    p {
      font-size: 16px;
    }
  }

  #footer ul {
    list-style: none;
    padding-left:0;
  }

  .half {
    width: 50%;
    float:left;

    h3 {
      margin: 22px 0;
    }
    p {
      margin:12px;
    }
  }

  h1 {
    margin: 32px 0 16px;
  }

  h2 {
    margin: 48px 0 16px;
  }

  h3 {
    margin: 32px 0 16px;
  }

  ul {
    margin: 12px 0 24px;
  }

  li {
    font-size: 18px;
    line-height: 1.4em;
    margin: 8px 0 8px;
  }
}

table.inherited_options {
  td {
    min-width:64px;
  }
  p {
    margin: 8px 8px;
    font-size:14px;
  }
}

.homepage-index {
  ul {
    padding-left: 0px;
  }

  li {
    padding-left:8px;
    list-style: none;

    h5 {
      margin-top:16px;
      margin-bottom:0px;
    }

    p {
      color:black;
      padding:12px;
      margin-top:0px;
      margin-bottom:10px;
    }

  }

  h2.guide-index {
    min-height:2.5em;
  }
}

@media screen and (max-width: 400px){
  h2.guide-index {
    text-align:center;
  }
}
